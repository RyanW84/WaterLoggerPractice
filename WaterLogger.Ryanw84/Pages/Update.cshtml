@page "{id:int}"
@model WaterLogger.Ryanw84.Pages.UpdateModel
@{
}

<h1>Update Water Intake</h1>

<form method="post">
    <dl class="row g-3">
        <dt class="col-sm-2 pe-4">
            <label asp-for="DrinkingWater.Date"></label>
        </dt>
        <dd class="col-sm-10">
            <input asp-for="DrinkingWater.Date" type="date" class="form-control" value="@Model.DrinkingWater.Date.ToString("yyyy-MM-dd")" />
            <span asp-validation-for="DrinkingWater.Date" class="text-danger"></span>
        </dd>
        <dt class="col-sm-2 pe-4">
            <label asp-for="DrinkingWater.Quantity"></label>
        </dt>
        <dd class="col-sm-10">
            <input asp-for="DrinkingWater.Quantity" type="number" class="form-control" />
            <span asp-validation-for="DrinkingWater.Quantity" class="text-danger"></span>
        </dd>
        <dt class="col-sm-2 pe-4">
            <label asp-for="DrinkingWater.Measure"></label>
        </dt>
        <dd class="col-sm-10">
            <select asp-for="DrinkingWater.Measure" class="form-control">
                <option value="Bottle">Bottle</option>
                <option value="Big Bottle">Big Bottle</option>
                <option value="Glass">Glass</option>
            </select>
            <span asp-validation-for="DrinkingWater.Measure" class="text-danger"></span>
        </dd>
    </dl>
    <div class="form-group">
        <input type="submit" value="Update" class="btn btn-primary" />
    </div>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}