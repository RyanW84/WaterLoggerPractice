@page
@model WaterLogger.Ryanw84.Pages.UpdateModel
@{
    ViewData["Title"] = "Update";
}

<h1>@ViewData["Title"]</h1>

<h4>Update Record</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <input type="hidden" asp-for="DrinkingWater.Id" />
            <dl class="row">
                <dt class="col-sm-3"><label asp-for="DrinkingWater.Date" class="control-label"></label></dt>
                <dd class="col-sm-9">
                    <input type="date" asp-for="DrinkingWater.Date" class="form-control" />
                    <span asp-validation-for="DrinkingWater.Date" class="text-danger"></span>
                </dd>
                <dt class="col-sm-3"><label asp-for="DrinkingWater.Quantity" class="control-label"></label></dt>
                <dd class="col-sm-9">
                    <input asp-for="DrinkingWater.Quantity" class="form-control" />
                    <span asp-validation-for="DrinkingWater.Quantity" class="text-danger"></span>
                </dd>
                <dd class="col-sm-9 offset-sm-3">
                    <input type="submit" value="Update" class="btn btn-primary" />
                </dd>
            </dl>
        </form>
    </div>
</div>

<div>
    <br />
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {}